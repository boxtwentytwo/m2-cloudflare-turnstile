<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <recaptcha_backend>
            <type_cf_turnstile>
                <public_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <private_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <size>normal</size>
                <theme>light</theme>
                <lang/>
                <validation_failure_message>Cloudflare Turnstile verification failed</validation_failure_message>
            </type_cf_turnstile>
        </recaptcha_backend>
        <recaptcha_frontend>
            <type_cf_turnstile>
                <public_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <private_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <size>normal</size>
                <theme>light</theme>
                <lang/>
                <validation_failure_message>Cloudflare Turnstile verification failed</validation_failure_message>
            </type_cf_turnstile>
        </recaptcha_frontend>
    </default>
</config>
