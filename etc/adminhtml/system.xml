<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
  <system>
    <section id="recaptcha_backend">
      <group id="type_cf_turnstile" translate="label" type="text" sortOrder="0" showInDefault="1"
        showInWebsite="0" showInStore="0">
        <label>Cloudflare Turnstile</label>
        <field id="public_key" translate="label" type="obscure" sortOrder="10" showInDefault="1"
          showInWebsite="0" showInStore="0" canRestore="0">
          <label>Site Key</label>
          <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
        <field id="private_key" translate="label" type="obscure" sortOrder="20" showInDefault="1"
          showInWebsite="0" showInStore="0" canRestore="0">
          <label>Secret Key</label>
          <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
        <field id="size" translate="label" type="select" sortOrder="30" showInDefault="1"
          showInWebsite="0" showInStore="0" canRestore="1">
          <label>Size</label>
          <source_model>BoxTwentyTwo\CloudflareTurnstile\Model\OptionSource\Size</source_model>
        </field>
        <field id="theme" translate="label" type="select" sortOrder="40" showInDefault="1"
          showInWebsite="0" showInStore="0" canRestore="1">
          <label>Theme</label>
          <source_model>BoxTwentyTwo\CloudflareTurnstile\Model\OptionSource\Theme</source_model>
        </field>
        <field id="lang" translate="label comment" type="text" sortOrder="50" showInDefault="1"
          showInWebsite="0"
          showInStore="0" canRestore="1">
          <label>Language Code</label>
          <comment><![CDATA[
                        Optional. Forces the widget to render in a specific language. Auto-detects the user's language if unspecified. See
                        <a target="_blank" href="https://developers.cloudflare.com/turnstile/reference/supported-languages">supported Language Codes</a>.
                ]]></comment>
        </field>
      </group>

      <group id="type_for">
        <label>Admin Panel</label>
        <field id="recaptcha_backend_info_heading">
          <frontend_model>
            BoxTwentyTwo\CloudflareTurnstile\Block\Adminhtml\System\Config\Form\Field\Notice</frontend_model>
        </field>
      </group>
    </section>
    <section id="recaptcha_frontend">
      <group id="type_cf_turnstile" translate="label" type="text" sortOrder="0" showInDefault="1"
        showInWebsite="1"
        showInStore="1">
        <label>Cloudflare Turnstile</label>
        <field id="public_key" translate="label" type="obscure" sortOrder="10" showInDefault="1"
          showInWebsite="1" showInStore="0" canRestore="0">
          <label>Site Key</label>
          <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
        <field id="private_key" translate="label" type="obscure" sortOrder="20" showInDefault="1"
          showInWebsite="1" showInStore="0" canRestore="0">
          <label>Secret Key</label>
          <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
        <field id="size" translate="label" type="select" sortOrder="30" showInDefault="1"
          showInWebsite="1" showInStore="0" canRestore="1">
          <label>Size</label>
          <source_model>BoxTwentyTwo\CloudflareTurnstile\Model\OptionSource\Size</source_model>
        </field>
        <field id="theme" translate="label" type="select" sortOrder="40" showInDefault="1"
          showInWebsite="1" showInStore="0" canRestore="1">
          <label>Theme</label>
          <source_model>BoxTwentyTwo\CloudflareTurnstile\Model\OptionSource\Theme</source_model>
        </field>
        <field id="lang" translate="label comment" type="text" sortOrder="50" showInDefault="1"
          showInWebsite="1" showInStore="1" canRestore="1">
          <label>Language Code</label>
          <comment><![CDATA[
                        Optional. Forces the widget to render in a specific language. Auto-detects the user's language if unspecified. See
                        <a target="_blank" href="https://developers.cloudflare.com/turnstile/reference/supported-languages">supported Language Codes</a>.
                ]]></comment>
        </field>
      </group>

      <group id="type_for">
        <field id="recaptcha_frontend_info_heading">
          <frontend_model>
            BoxTwentyTwo\CloudflareTurnstile\Block\Adminhtml\System\Config\Form\Field\Notice</frontend_model>
        </field>
      </group>
    </section>
  </system>
</config>